{{- partial "core/set-env.html" . -}}
{{- $list := .Data.Pages -}}
{{- $length := (len $list) -}}
{
    "version" : "https://jsonfeed.org/version/1",
    "home_page_url" : "{{- .Site.BaseURL -}}",
    "content" : "author",
    "type" : "list",
    "count" : "{{- $length -}}",
    {{- with .OutputFormats.Get "JSON" -}}
    "feed_url" : "{{- .Permalink -}}",
    {{- end -}}
    "profile_url" : "{{- .Permalink -}}",
    {{/* Lets look up the author data, based on the UID. Should equal the filename */}}
    {{- $author := $.Site.GetPage (printf "/%s/%s" "authors" $.Data.Term) -}}
    {{- if $author.Params.display_name -}}
    "display_name" : "{{- $author.Params.display_name -}}",
    {{- end -}}
    {{- if $author.Params.first_name -}}
    "first_name" : "{{- $author.Params.first_name -}}",
    {{- end -}}
    {{- if $author.Params.last_name -}}
    "last_name" : "{{- $author.Params.last_name -}}",
    {{- end -}}
    {{- if $author.Params.uid -}}
    "uid" : "{{- $author.Params.uid -}}",
    {{- end -}}
    {{- if $author.Params.email -}}
    "email" : "{{- $author.Params.email -}}",
    {{- end -}}
    {{- if $author.Params.bio -}}
    "bio" : "{{- $author.Params.bio -}}",
    {{- end -}}
    {{- if $author.Params.location -}}
    "location" : "{{- $author.Params.location -}}",
    {{- end -}}
    {{- if $author.Params.agency -}}
    "agency" : "{{- $author.Params.agency -}}",
    {{- end -}}
    {{- if $author.Params.agency_full_name -}}
    "agency_full_name" : "{{- $author.Params.agency_full_name -}}",
    {{- end -}}
    {{- if $author.Params.github -}}
    "github" : "{{- $author.Params.github -}}",
    {{- end -}}
    {{- if $author.Params.twitter -}}
    "twitter" : "{{- $author.Params.twitter -}}",
    {{- end -}}
    {{- if $author.Params.facebook -}}
    "facebook" : "{{- $author.Params.facebook -}}",
    {{- end -}}
    {{- if $author.Params.linkedin -}}
    "linkedin" : "{{- $author.Params.linkedin -}}",
    {{- end -}}
    {{- if $author.Params.youtube -}}
    "youtube" : "{{- $author.Params.youtube -}}",
    {{- end -}}
    "items" : [
    {{- range $index, $element := $list -}}
    {
        "title" : {{- .Title | jsonify -}},
        {{- if (isset .Params "deck") -}}
        "deck" : "{{- .Params.deck | markdownify -}}",
        {{- end -}}
        {{- if (isset .Params "summary") -}}
        "summary" : "{{- .Params.summary -}}",
        {{- end -}}
        "date_published" : "{{- .Date.Format "2006-01-02T15:04:05Z07:00" -}}",
        {{- if .Lastmod -}}
        "date_modified" : "{{- .Date.Format "2006-01-02T15:04:05Z07:00" -}}",
        {{- else -}}
        "date_modified" : "{{- .LastMod.Format "2006-01-02T15:04:05Z07:00" -}}",
        {{- end -}}
        {{- if (isset .Params "authors") -}}
          {{- $_authors := .Params.authors -}}
          {{- $length := $_authors | len -}}
          "authors" : {
          {{- range $i, $e := $_authors -}}
            {{- $uid := $e | urlize -}}
            {{- $author := $.Site.GetPage (printf "/%s/%s" "authors" $uid) -}}
            {{- with $author -}}
              {{- if lt (add $i 1) $length -}}
                "{{- $uid -}}" : "{{- $author.Params.display_name | default $uid }}",
              {{- else -}}
                "{{- $uid -}}" : "{{- $author.Params.display_name | default $uid }}"
              {{- end -}}
            {{- end -}}
          {{- end -}}
          },
        {{- end -}}

        {{- if (isset .Params "topics") -}}
          "topics" : {
          {{/* Sets the taxonomy we're pulling here */}}
          {{- $taxonomy := "topics" -}}
          {{- $topics := .Param $taxonomy -}}
          {{/* Gets the number of topics that are applied */}}
          {{- $length := $topics | len -}}

          {{/* For each of the topics,... */}}
          {{- range $i, $e := sort $topics -}}
            {{- $slug := . -}}
            {{/* Gets the Topics page */}}
            {{- with $.Site.GetPage (printf "/%s/%s" $taxonomy $slug) -}}
              {{ if lt (add $i 1) $length }}
              "{{- $slug -}}" : "{{- .Title }}",
              {{- else }}
              "{{- $slug -}}" : "{{- .Title }}"
              {{ end }}
            {{- end -}}

          {{- end -}}
          },
        {{- end -}}

        "branch" : {{ $.Scratch.Get "branch" | jsonify }},
        "filename" : {{ .File.LogicalName | jsonify }},
        "filepath" : {{ .File.Path | jsonify }},
        "filepathURL" : {{ printf "https://github.com/%s/%s/blob/%s/content/%s" $.Site.Params.git_org $.Site.Params.git_repo ($.Scratch.Get "branch") .File.Path | jsonify }},
        "editpathURL" : {{ printf "https://github.com/%s/%s/edit/%s/content/%s" $.Site.Params.git_org $.Site.Params.git_repo ($.Scratch.Get "branch") .File.Path | jsonify }},
        "url" : "{{- .Permalink -}}"
    }{{- if ne (add $index 1) $length -}},{{- end -}}
    {{- end -}}
    ]
}
